<h3>Add a Toy</h3>

<form action="/toys" method="POST">
  <label>Name of Toy: </label>
  <input type="text" name="toy[name]">
  <br>
  <h3>Select all categories that apply to this toy:</h3>
    <% @categories.each do |category| %>
      <label > <%= category.name %> </label>
      <input type="checkbox" id="<%= category.name %>" name="toy[category_ids][]" value="<%= category.id %>"><br>
    <% end %>
  <h3>Select the stage that applies to this toy:</h3>
    <% @stages.each do |stage| %>
      <label > <%= stage.name %> </label>
      <input type="radio" id="<%= stage.name %>" name="toy[stage_id]" value="<%= stage.id %>"><br>
    <% end %>

  <h3> Who's Damn Toy Is This?</h3>
  <% current_user.kids.each do |kid| %>
    <input type="radio" name="toy[kid_id]" id="<%= kid.id %>" value="<%= kid.id %>"><%= kid.name %><br>
  <% end %>
  <br>


  <input type="submit" value="Submit">
</form>
