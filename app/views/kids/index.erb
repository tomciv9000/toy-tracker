<nav>
  <% if logged_in? %>
    <p><strong>Here's your brood:</strong></p>
    <% if current_user.kids.empty? %>
    <ul>
      <li>You have 0 kids registered. Lucky.</li>
    </ul>
    <% else %>
    <ul><% current_user.kids.each do |kid| %>
      <li><a href="/kids/<%=kid.slug_id%>"><%= kid.name %> - <%= kid.stage.name %></a></li>
    </ul>
      <br>
    <% end %>
  <% end %>
    <a href="/kids/new"> Register New Kid!</a>
  <% else %>
  <p>Please log in or signup below:</p>
    <a href="/signup">Sign Up</a>
    <a href="/login"> Sign In </a>
  <%end %>

</nav>
