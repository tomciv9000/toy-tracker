<h3>Edit <%= @kid.name %>'s Details'</h3>
<form action="/kids/<%= @kid.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="[kid]name" id="name" value="<%= @kid.name %>">
  <label> Select Development Stage </label>
  <br>
  <% Stage.development_stages.each do |stage| %>
    <label><%= stage.name %></label>
    <input type="radio" name="kid[stage_id]" id="<%= stage.id %>" value="<%= stage.id %>"<%='checked' if @kid.stage_id == stage.id %>><br>
  <% end %>
  <input type="submit" value="Save Changes">
</form>
